//Gurka
#include <iostream>
using namespace std;

void Startscreen (double& play);
void Players (double& players);
void notplay ();
void groundwaterlyrics();

int main ()
{
    double play;
    double players;

    Startscreen (play);
    if (play == 1)
    {
        Players (players);
    }
    if (play == 2)
    {
        notplay ();
    }
    if (play == 4)
    {
        groundwaterlyrics(); 
    }
    
    return 0;
}

