void Players (double& players)
{
    cout<<"Welcome to Gurka!"<<endl;
    cout<<"Please enter the number of players"<<endl;
    cout<<"2-4 players"<<endl;
    cin>>players;
        while (true)
        {
            if (cin.fail())
            {
                cin.clear();
                cout<<"Please enter a number"<<endl;
                cin.ignore(10000, '\n');
                cin>>players;
            }

            if (players < 2)
            {
                cin.clear();
                cout<<"Please enter a number between 2 and 4"<<endl;
                cin>>players;
            }

            if (players > 4)
            {
                cin.clear();
                cout<<"Please enter a number between 2 and 4"<<endl;
                cin>>players;
            }
            else
            {
                break;
            }
        }

}

void notplay ()
{
    cout<<"\n\nThank you for NOT playing Gurka!"<<endl;
    cout<<"Goodbye!"<<endl;
    cout <<"Press enter to exit."<<endl;
}

